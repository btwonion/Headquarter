<configuration>
    <appender name="CONSOLE"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="org.mongodb.driver.connection" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.authenticator" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.client" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.cluster" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.connection.tls" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.operation" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.protocol" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.uri" level="WARN" additivity="true"/>
    <logger name="org.mongodb.driver.management" level="WARN" additivity="true"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>